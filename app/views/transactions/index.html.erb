<p id="notice"><%= notice %></p>

<h1>Transactions</h1>

<table id="tab1" class="table table-bordered">
  <thead>
    <tr>
      <th>Transaction type</th>
      <th>Entity</th>
      <th>Transaction number</th>
      <th>Transaction date</th>
      <th>Net price</th>
      <th>Vat</th>
      <th>Gross price</th>
      <th>Internal payoff</th>
      <th>Internal paid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.transaction_type %></td>
        <td><%= transaction.entity %></td>
        <td><%= transaction.transaction_number %></td>
        <td><%= transaction.transaction_date %></td>
        <td><%= transaction.net_price %></td>
        <td><%= transaction.vat %></td>
        <td><%= transaction.gross_price %></td>
        <td><%= transaction.internal_payoff %></td>
        <td><%= transaction.internal_paid %></td>
        <td><%= link_to 'Show', transaction %></td>
        <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
        <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <tr>
      <td colspan="4" style="text-align: right; font-weight: normal;">TOTAL:</td>
      <td><%= @transactions.sum(:net_price) %></td>
      <td></td>
      <td><%= @transactions.sum(:gross_price) %></td>
      <td colspan="5"></td>
    </tr>
  </tbody>
</table>

<br />

Net income: <%= @transactions.sum(:net_price) %>
<br />
Gross income: <%= @transactions.sum(:gross_price) %>

<br />

